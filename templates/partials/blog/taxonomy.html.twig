{% if page.taxonomy.tag %}
  {% set hero_alignment = theme_var('hero.alignment')|e %}
  {% set align_classes = align_classes ?: hero_alignment == 'center' ? 'mx-1' : hero_alignment == 'right' ? 'ml-2' : 'mr-2' %}
  <div class="tags text-sm">
    {% for tag in page.taxonomy.tag %}
      <a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}#blog_list">
        <span class="{{ align_classes }}">
            {{ tag }}
        </span>
      </a>
    {% endfor %}
  </div>
{% endif %}
